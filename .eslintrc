{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
          "indent": [ 2, 4 ],
          "prefer-const": 1,

          "react/jsx-filename-extension": 0,
          "react/jsx-indent": [ 2, 4 ],
          "jsx-a11y/no-static-element-interactions": 0,

          "import/no-extraneous-dependencies": ["error", {
              "devDependencies": [
                  "**/*.test.js",
                  "**/webpack.*.js"
              ]
          }],
      }
}
